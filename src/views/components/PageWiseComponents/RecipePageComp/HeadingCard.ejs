<div class="font-body backdrop-blur-2xl bg-[rgba(255,255,255,0,1)] border-2 border-white rounded-2xl px-6 py-5 w-2/5 shadow-inner space-y-4">
    <div class="flex justify-between font-heading text-gray-800 items-center">
        <h1 class="font-heading text-4xl"><%= title; %></h1>

        <!-- Rating Star div -->
        <div class="flex justify-start gap-2">
            <!-- Filled Stars-->
            <% Array(stars).fill("").forEach(_ => { %>
                <%- include("../../Icons/Reactions/StarSolid", {containerClass: "", svgClass: "w-5 fill-amber-600"}) -%>
            <% }); %>

            <!-- Unfilled Stars-->
            <% Array(5 - (+`${stars}`)).fill("").forEach(_ => { %>
                <%- include("../../Icons/Reactions/StarRegular", {containerClass: "", svgClass: "w-5 fill-amber-600"}) -%>
            <% }); %>
        </div>
    </div>
    <div class="flex justify-start items-center gap-2">
        <%- include("../../Icons/UI/Clock", { containerClass: "", svgClass: "w-5 fill-selected-mehandi stroke-2" }) -%>
        <span class="text-selected-mehandi">
            <%= totalCookTime; %>
        </span>
    </div>
    <p class="text-slate-800">
        <%= desc %>
    </p>

    <button class="flex justify-between items-center gap-4 border border-amber-700 text-amber-700 rounded-full p-2 pr-4">
        <span>Add to list</span>
        <%- include("../../Icons/UI/Actions/BookmarkSolid", { containerClass: "", svgClass: "w-4 fill-amber-700" }) -%>
    </button>
</div>